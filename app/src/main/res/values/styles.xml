<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="tv_heading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:textColor">@color/app_black</item>
    </style>

    <style name="tv_sub_heading" parent="tv_heading">
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="tv_body">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="tv_body_black" parent="tv_body">
        <item name="android:textColor">@color/app_black</item>
    </style>

    <style name="tv_body_gray" parent="tv_body">
        <item name="android:textColor">@color/app_gray_dark</item>
    </style>

    <style name="et_gray">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_40ssp</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:layout_marginStart">@dimen/_30ssp</item>
        <item name="android:layout_marginEnd">@dimen/_30ssp</item>
        <item name="android:background">@drawable/gray_round_corners_bg</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
        <item name="android:textColorHint">@color/app_gray_dark</item>
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="stroke_btn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_40ssp</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">@dimen/_30ssp</item>
        <item name="android:layout_marginEnd">@dimen/_30ssp</item>
        <item name="android:background">@drawable/gray_round_corners_btn_bg</item>
    </style>

</resources>